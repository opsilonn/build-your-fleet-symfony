{% extends 'base.html.twig' %}


{% block title %} {{ parent() }} - Signin {% endblock %}


{% block body %}
    <!-- BACKGROUND OF THE PAGE -->
    <style>
        body, html
        {
            background-image: url("../img/Wallpaper_Connexion_Sign_In.png");
        }
    </style>


    <!-- A button to go back to the mainpage -->
    {% include 'components/button_mainpage.html.twig' %}

    <div style="height:auto; width:auto; display: flex;">

        <!-- SIGN IN FORM -->
        <div style="margin: auto" class="custom-box-form">
            <form method="post">
                <div style="margin-right: 50px;margin-left: 50px;">

                    <input hidden type="text" name="token" value="{{ csrf_token('profile_signin') }}">

                    <div>
                        <input
                        size ="30"
                        type ="text"
                        name ="fName"
                        required/>
                        <em>- First Name</em>
                    </div>

                    <div>
                        <input
                        size ="30"
                        type ="text"
                        name ="lName"
                        required
                        onkeyup="javascript:this.value=this.value.toUpperCase();"/>
                        <em>- Last Name</em>
                    </div>

                    <div>
                        <input
                        size ="30"
                        type ="email"
                        name ="email"
                        required/>
                        <em>- Email</em>
                    </div>

                    <div>
                        <input
                        size ="30"
                        type ="password"
                        name ="password"
                        required/>
                        <em>- Password</em>
                    </div>
                    
                    <div style="text-align: center;">
                        <input class="pointer" type="submit" value="Sign in !"/>
                    </div>
                </div>
            </form>
            
            {% if errorMessage is defined %}
                <div class="redAlert"> {{ errorMessage }} </div>
            {% endif %}
        </div>
        
        <!-- LOG IN BUTTON -->
        <div style="display: flex; margin: auto">
            <a href="{{ path('profile_logIn') }}">
                <div class="button-connection">
                    <span> Log In </span> 
                </div>
            </a>
        </div>
    </div>

{% endblock %}
